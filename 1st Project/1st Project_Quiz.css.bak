 $desktop:1200px;
 $laptop:1024px;
 $tablet:768px;
 $phone:480px;
 #title
  {
	width:100%;
	height:720px;
	background-image:url('creative_writing_ideas-765x405.jpg');
	background-size:100% 700px;
	background-repeat:no-repeat;
	@media screen and (max-width:$desktop) and (min-width:$tablet)
	{
		background:white;
	}
  }
	#fld1
	{
		margin-top:20px;
		color:cyan;
		width:700px;
		height:200px;
		border-radius:10px 10px 10px 10px;
		box-shadow:0px 0px 40px red;
		margin-right:400px;
	}
	#img
	{
		margin-right:400px;
	}
	marquee
	{
		font-size:50px;
		color:gold;
		direction:right;
		font-weight:bold;
		text-shadow:0px 0px 20px blue;
	}
	#button:hover
	{
		box-shadow:0px 0px 20px lime;
		background-color:rgb(209, 133, 174);		
	}
	#button
	{
		margin-top:20px;
		width:300px;
		height:60px;
		border-radius:40px;
		font-weight:bold;
		font-size:30px;
		color:blueviolet;
		background-image:radial-gradient(white,orange);	
	}
	h1
	{
		font-size:40px;
	}
	label
	{
		margin-top:30px;
		margin-left:30px;
		color:lime;
		float:left;
		font-size:30px;
	}
	